<resources>
    <!-- Base application theme. -->
    <style name="Theme.BINM" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash Screen Theme. -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen's background color -->
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <!-- Set the splash screen's icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <!-- Set the theme of the app after the splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.BINM</item>
    </style>
</resources>